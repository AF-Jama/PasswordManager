<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/ejsStyles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <%-include('./partials/nav')%>

    <section id="main-section">
        <div id="grid-container">
            <% if(data.length === 0) {%>
                <div id="flex-password-container">
                    <h2>Add some passwords to store</h2>
                </div>
            <% } else {%>
                <div id="password-container">
                    <% for(const password of data){%>
                        <div class="card-body">
                            <h5 class="card-title"><%=password.site%></h5>
                            <p class="card-text">Your password is shown below, click to reveal</p>
                            <button class="btn btn-primary" id="encrypt-btn" style="width: 150px; overflow: hidden; text-overflow: ellipsis;  white-space: nowrap;"><%=password.encrypt_password%></button>
                        </div>
                    <%}%>
                </div>
            <%}%>
            <div id="buttons-container">
                <div class="password-btns" id="plus-sign-container">
                    <a href="/mainpage/add"><i class="fa fa-plus" style="font-size:30px"></i></a>
                </div>

                <form action="/logout" method="post" id="logout-form">
                    <button type="submit" id="logout-submit-btn" class="btn btn-primary" style="margin-top: 0.5rem">Logout</button>
                </form>

                <div class="password-btns" id="show-all-password-btn">
                    <button type="submit" id="show-passwords-btn" class="btn btn-primary">Show all passwords</button>
                </div>
            </div>
        </div>

    </section>

    <script src="/scripts/bundle.js"></script>
</body>
</html>